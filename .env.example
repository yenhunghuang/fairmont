# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Backend Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_DEBUG=False

# Frontend Configuration
FRONTEND_PORT=8501

# File Management
TEMP_DIR=./backend/temp_files
EXTRACTED_IMAGES_DIR=./backend/extracted_images
MAX_FILE_SIZE_MB=50
MAX_FILES=5

# Logging
LOG_LEVEL=INFO

# Google API Configuration (for Google Sheets export)
# 1. Create a project in Google Cloud Console
# 2. Enable Google Sheets API and Google Drive API
# 3. Create a Service Account and download JSON key
# 4. Save the JSON file and set the path below
# 5. Create a blank Google Spreadsheet and share with service account (Editor)
# 6. Create a folder in Google Drive and share with service account (Editor)
GOOGLE_CREDENTIALS_PATH=google-credentials.json
GOOGLE_SHEETS_ENABLED=false
# Folder ID in Google Drive for storing images (required)
GOOGLE_DRIVE_FOLDER_ID=
# Master spreadsheet ID for adding sheets (required)
GOOGLE_SHEETS_MASTER_ID=
